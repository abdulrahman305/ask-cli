{
  "type": "APLA",
  "version": "0.8",
  "mainTemplate": {
    "parameters": ["payload"],
    "item": {
      "type": "Sequencer",
      "description": "Change 'type' above to try different Selector Component Types like Sequencer",
      "items": [
        {"type": "Speech", "contentType": "text", "content": "You wanted "},
        {
          "type": "Speech",
          "when": "${payload.size == 'small' || payload.size == 'large' || payload.size == 'medium'}",
          "content": "a ${payload.size} pizza, is that correct?"
        },
        {"type": "Speech", "when": "${payload.size == 'extra large'}", "content": "an ${payload.size} pizza, is that correct?"}
      ]
    }
  }
}
